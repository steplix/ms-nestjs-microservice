{
  "name": "@steplix/nestjs-microservice",
  "version": "1.0.0",
  "description": "Base MS for Steplix. Based on NestJS",
  "main": "index.js",
  "bin": {
    "steplix-db-install": "./bin/steplix-db-install.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"**/*.ts\" \"bin/steplix-db-install.js\"",
    "lint:fix": "eslint \"**/*.ts\" \"bin/steplix-db-install.js\" --fix",
    "test": "jest --clearCache && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "prepack": "echo 'module.exports = require('./build');' >> index.js",
    "postpack": "rm index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/steplix/ms-nestjs-microservice"
  },
  "author": {
    "name": "Steplix Developer"
  },
  "license": "MIT",
  "dependencies": {
    "@comodinx/cache": "^0.0.6",
    "@nestjs/common": "^9.3.8",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.8",
    "@nestjs/platform-express": "^9.3.8",
    "@nestjs/sequelize": "^9.0.0",
    "@nestjs/serve-static": "^3.0.1",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/terminus": "^9.2.0",
    "@tsed/logger": "^6.3.4",
    "axios": "^1.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "helmet": "^6.0.1",
    "http-constants": "^2.1.0-19-gdd89f31",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "memory-cache": "^0.2.0",
    "mysql2": "^3.1.2",
    "redis": "^4.6.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sequelize": "6.28.0",
    "sequelize-expression": "^0.2.1",
    "sequelize-typescript": "2.1.5",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.2.0",
    "@nestjs/testing": "^9.3.8",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "jest": "29.4.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache"
  },
  "test-staged": {
    "src/**/*.js?(x)": "npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && test-staged"
    }
  },
  "engines": {
    "node": "18.x"
  },
  "keywords": [
    "nest js",
    "typescript",
    "template",
    "microservice"
  ],
  "files": [
    "bin",
    "build",
    "index.js",
    "LICENSE",
    "README"
  ]
}
